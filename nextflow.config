
includeConfig './tasks.config'

profiles {
    standard {

        trace.enabled = true
        singularity {
            enabled = true
            autoMounts = true
            cacheDir = '/stornext/HPCScratch/lab_bahlo/singularity_cache'
        }

        executor {
            name = 'slurm'
            queueSize = 200
            cpus = 16
            pollInterval = '10 s'
            queueStatInterval = '10 s'
            submitRateLimit = 10
            exitReadTimeout = '1 min'
        }

        process {
            errorStrategy = 'finish'
            executor = 'slurm'
            cache = 'lenient'
        }
    }
}
